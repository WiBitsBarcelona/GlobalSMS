<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_shape"
    android:elevation="5dp">


    <TextView
        android:id="@+id/codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:elevation="0dp"
        android:maxLines="1"
        android:padding="5dp"
        android:text="40304545455454"
        android:textColor="#6d7278"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fechahora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codigo"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:padding="5dp"
        android:text="07/11/2017 - 11:58"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="#6d7278"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/globalpay_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/codigo"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:contentDescription="TODO"
            android:src="@drawable/globalpay_icon"
            android:visibility="visible" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/print_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/instantic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/codigo"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/instantic_icon"
            android:visibility="visible" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/print_icon" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/globalwallet_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/codigo"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/qr_icon"
            android:visibility="visible" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/print_icon" />

    </LinearLayout>

</RelativeLayout>