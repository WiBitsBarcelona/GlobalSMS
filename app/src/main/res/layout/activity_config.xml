<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/textView"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Ticket Header"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColorLink="#68a9ea" />

    <EditText
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:elevation="0dp"
        android:ems="12"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="6"
        android:textAlignment="center"
        android:textColorLink="#68a9ea" />

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cabecera"
        android:layout_below="@+id/cabecera"
        android:layout_marginTop="33dp"
        android:gravity="center_horizontal|end"
        android:text="Terminal:"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textColorLink="#68a9ea"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/instanticterminal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/PosList"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/instanticterminal"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal|end"
        android:text="Secret:"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textColorLink="#68a9ea"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/instanticsecret"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView5"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/instanticsecret"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal|end"
        android:text="Server Address:"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textColorLink="#68a9ea"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/serveraddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/instanticsecret"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView10"
        style="@android:style/Widget.TextView.SpinnerItem"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/serveraddress"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal|end"
        android:text="API URL:"
        android:textAlignment="textEnd"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textColorLink="#68a9ea"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/apiurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignStart="@+id/serveraddress"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/QrSiNo"
        android:layout_alignBottom="@+id/QrSiNo"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center_vertical|end"
        android:text="Use QR Scanner?"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/QrSiNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/apiurl"
        android:layout_below="@+id/apiurl"
        android:layout_marginTop="14dp"
        android:text="ToggleButton"
        android:textOff="No"
        android:textOn="Yes"
        tools:text="Use QR Scanner?" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EurSiNo"
        android:layout_alignBottom="@+id/EurSiNo"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center_vertical|end"
        android:text="Show euros?"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/EurSiNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/QrSiNo"
        android:layout_below="@+id/QrSiNo"
        android:layout_marginTop="14dp"
        android:text="ToggleButton"
        android:textOff="No"
        android:textOn="Yes"
        tools:text="Mostrar Euros?" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/PosList"
        android:gravity="center_vertical|end"
        android:text="POS System:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/PosList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EurSiNo"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/textView9"
        android:entries="@array/Proveedores"
        android:minWidth="100dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/PosList"
        android:layout_marginTop="18dp"
        android:gravity="center_vertical|end"
        android:text="Languaje:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/locList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/instanticterminal"
        android:layout_alignTop="@+id/textView8"
        android:entries="@array/locale"
        android:minWidth="100dp" />

</RelativeLayout>
