<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Ticket Header"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorLink="#68a9ea" />

            <EditText
                android:id="@+id/cabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:elevation="0dp"
                android:ems="12"
                android:inputType="textMultiLine"
                android:lines="6"
                android:maxLines="6"
                android:textAlignment="center"
                android:textColorLink="#68a9ea" />

            <TextView
                android:id="@+id/textView2"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Terminal:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorLink="#68a9ea"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/instanticterminal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Secret:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorLink="#68a9ea"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/instanticsecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView5"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Server Address:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorLink="#68a9ea"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/serveraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView10"
                style="@android:style/Widget.TextView.SpinnerItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:text="API URL:"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColorLink="#68a9ea"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/apiurl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:text="Use QR Scanner?"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/QrSiNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="ToggleButton"
                android:textOff="No"
                android:textOn="Yes"
                tools:text="Use QR Scanner?" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:text="Show euros?"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textStyle="bold" />

            <ToggleButton
                android:id="@+id/EurSiNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="ToggleButton"
                android:textOff="No"
                android:textOn="Yes"
                tools:text="Mostrar Euros?" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:text="POS System:"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/PosList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/textView9"
                android:entries="@array/Proveedores"
                android:gravity="center"
                android:minWidth="100dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Languaje:"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/locList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/instanticterminal"
                android:layout_alignTop="@+id/textView8"

                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal|center"
                android:entries="@array/locale"
                android:gravity="center"
                android:minWidth="100dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
